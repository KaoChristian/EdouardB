{% set route_name = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Dashboard | {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/admin.css">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Edouard B.</a>
            <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-nav">
                <div class="nav-item text-nowrap">
                    <a class="nav-link px-3" href="/logout">Se d√©connecter</a>
                </div>
            </div> 
        </header>

        <div class="container-fluid">
            <div class="row">
                <aside class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <nav class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a
                                    href="/admin"
                                    {% if route_name == "app_admin" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Accueil
                                </a>
                            </li>
                        </ul>

                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Contenu</span>
                        </h6>

                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a
                                    href="/admin/sections"
                                    {% if route_name == "app_sections" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Sections
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                    href="/admin/section-categories"
                                    {% if route_name == "app_section_categories" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Types de sections
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                    href="/admin/articles"
                                    {% if route_name == "app_articles" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Articles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                    href="/admin/gallery"
                                    {% if route_name == "app_gallery" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Gallerie
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                    href="/admin/carousel"
                                    {% if route_name == "app_carousel" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Carousel
                                </a>
                            </li>
                        </ul>

                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Administration</span>
                        </h6>

                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a
                                    href="/admin/infos"
                                    {% if route_name == "app_infos" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Infos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                    href="/admin/users"
                                    {% if route_name == "app_users" %} class="nav-link active"
                                    {% else %} class="nav-link"
                                    {% endif %}>
                                    Utilisateurs
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
