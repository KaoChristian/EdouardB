{% extends 'admin/base.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Carousel</h1>

        <a class="btn btn-primary" href="/admin/carousel/new">
            Cr√©er
        </a>

        <table class="table">
            <thead>
                <tr>
                <th scope="col">ID</th>
                <th scope="col">Fichier</th>
                <th scope="col">Nom alternatif</th>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Bouton</th>
                <th scope="col">Lien</th>
                <th scope="col">Image Vich</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            {% for carousel in carousels %}
                <tr>
                    <td>{{ carousel.id }}</td>
                    <td>{{ carousel.url }}</td>
                    <td>{{ carousel.altName }}</td>
                    <td>{{ carousel.title }}</td>
                    <td>{{ carousel.description }}</td>
                    <td>{{ carousel.button }}</td>
                    <td>{{ carousel.link }}</td>
                    <td>{{ carousel.imageName }}</td>
                    <td style="display: flex; gap: 5px">
                        <a 
                            class="btn btn-secondary"
                            href="{{ path('admin_carousel_edit', {'id': carousel.id}) }}"
                        >
                            <i class="fas fa-edit"></i>
                        </a>

                        {{ include('admin/carousel/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune image</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
