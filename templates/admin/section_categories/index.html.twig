{% extends 'admin/base.html.twig' %}

{% block title %}Catégories de section{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Catégories de section</h1>

    <table class="table">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            </tr>
        </thead>
        {% for section_category in section_categories %}
            <tr>
                <td>{{ section_category.id }}</td>
                <td>{{ section_category.name }}</td>
                <td>
                    <a
                        class="btn btn-secondary"
                        href="{{ path('app_user_edit', {'id': section_category.id}) }}"
                    >
                        <i class="fas fa-edit"></i>
                    </a>

                    <a
                        class="btn btn-secondary"
                        href="{{ path('app_user_delete', {'id': section_category.id}) }}"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune catégorie</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
