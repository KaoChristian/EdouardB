{% extends 'admin/base.html.twig' %}

{% block title %}Sections{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Sections</h1>

    <a class="btn btn-primary" href="/admin/sections/new">
        Créer
    </a>

    <table class="table">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">ID catégorie</th>
            <th scope="col">Titre</th>
            </tr>
        </thead>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.section_category_id }}</td>
                <td>{{ section.title }}</td>
                <td>
                    <a
                        class="btn btn-secondary"
                        href="{{ path('app_user_edit', {'id': section.id}) }}"
                    >
                        <i class="fas fa-edit"></i>
                    </a>

                    <a
                        class="btn btn-secondary"
                        href="{{ path('app_user_delete', {'id': section.id}) }}"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune section</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
