{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/home.css">
{% endblock %}

{% block body %}
<section class="contact py-5" id="contact">
    <div class="container">
        <div class="row my-5">
            <div class="col-md-12">
                <h1 class="text-center text-lg-start mt-0">Contact</h1>

                <hr class="mt-2 mb-5">
            </div>
            <article class="col-lg-5">
                <div class="address">
                    <h5><i class="fas fa-map-marker"></i></h5>
                        <ul class="list-unstyled">
                            <li> 216 Rue Pierre Brossolette</li>
                            <li> 93160 Noisy-le-Grand</li>
                        </ul>
                </div>
                <div class="email">
                    <h5><i class="fas fa-at"></i></h5>
                        <ul class="list-unstyled">
                            <li> info@email.com</li>
                        </ul>
                </div>
                <div class="phone">
                    <h5><i class="fas fa-phone"></i></h5>
                        <ul class="list-unstyled">                            
                            <li class="text-lg-start">  Réservez en appelant le numéro ci dessous  </li>
                            <li class="text-lg-start"><strong> 01 43 03 33 40 </strong></li>
                        </ul>
                </div>
                <hr>
                <div class="">
                    
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2625.4984440044527!2d2.5498517158403096!3d48.84870490934242!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e60e017d2bf129%3A0x4a031fb44186e69!2s216%20Rue%20Pierre%20Brossolette%2C%2093160%20Noisy-le-Grand!5e0!3m2!1sen!2sfr!4v1656111785410!5m2!1sen!2sfr" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                </div>
               
            </article>

            <article class="col-lg-4">
                <div class="container">
                    <div>
                        <h2>Nous Contacter ?</h2>
                 <!-- Mailer -->
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success mt-4">
                                {{message}}
                                </div>
                        {% endfor %}
                        {{ form_start(form) }}
                                {{ form_widget(form) }}
                                <button class="btn btn-secondary">{{ button_label|default('Envoyer') }}</button>
                            {{ form_end(form) }}
                    </div>
                </div>
            </article>


            <article class="col-lg-3">
                <div class="container">
                    <div class="d-flex justify-content-center">
                        <table class="table table-striped table table-bordered" style="width:350px;">
                            <thead class="thead">
                                <th>Jours</th>
                                <th>Horaire (journée continue)</th>
                            </thead>
                            <tbody class="table table-striped">
                                <tr>
                                <td>Lundi</td>
                                <td>Fermé</td>
                                </tr>
                                <tr>
                                <td>Mardi</td>
                                <td>9:00 - 19:00</td>
                                </tr>
                                <tr>
                                <td>Mercredi</td>
                                <td>9:00 - 19:00</td>
                                </tr>
                                <tr>
                                <td>Jeudi</td>
                                <td>9:00 - 19:00</td>
                                </tr>
                                <tr>
                                <td>Vendredi</td<>
                                <td>9:00 - 19:00</td>
                                </tr>
                                <tr>
                                <td>Samedi</td>
                                <td>9:00 - 18:30</td>
                                </tr>
                                <tr>
                                <td>Dimanche</td>
                                <td>Fermé</td>
                                </tr>
                            </tbody>
                            </table>
                    </div>
                </div>
            </article>
        </div>      
    </div>

    <hr class="featurette-divider">

</section>


{% endblock %}
