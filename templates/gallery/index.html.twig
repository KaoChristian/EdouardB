{% extends 'base.html.twig' %}

{% block title %}Gallerie{% endblock %}

{% block body %}

<div class="container mt-5">

  <div class="row mt-5">

    <h1 class="fw-light text-center text-lg-start mt-5 mb-0">Gallerie</h1>

    <hr class="mt-2 mb-5">


        <div class="row text-center text-lg-start flex">
            {% for gallery in galleries %}
              <div class="col-lg-3 col-md-4 col-6">
                <a href="#" class="d-block mb-4 h-100">
                  <img class="img-fluid img-thumbnail" src="/img/{{gallery.url}}.jpg" alt="">
                </a>
              </div>
            {% endfor %}
        </div>  
  </div>
</div>  
{% endblock %}
